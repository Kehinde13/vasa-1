// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── NextAuth Base Models ────────────────────────────────────────────────
model User {
  id             String   @id @default(cuid())
  name           String?
  email          String?  @unique
  emailVerified  DateTime?
  image          String?

  // VAsA-specific fields
  fullName       String?
  businessName   String?
  role           String?         // e.g. "VA", "Admin"
  phone          String?
  timeZone       String?
  businessType   String?
  services       String[]        // e.g. ["Client Management", "Invoicing"]

  // Relations
  accounts       Account[]
  sessions       Session[]
  clients        Client[]
  projectsOwned  Project[]       @relation("OwnedProjects")

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? 
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App Models ────────────────────────────────────────────────────────────────

model Client {
  id           String     @id @default(cuid())
  name         String
  email        String
  status       String      // active | prospect | paused
  preferences  Json
  billing      Json
  userId       String

  user         User        @relation(fields: [userId], references: [id])
  projects     Project[]
  documents    Document[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Project {
  id         String   @id @default(cuid())
  name       String
  status     String   // Not started | In progress | Done
  dueDate    DateTime?
  priority   String   // High | Medium | Low

  // Relations
  clientId   String
  ownerId    String
  client     Client   @relation(fields: [clientId], references: [id])
  owner      User     @relation("OwnedProjects", fields: [ownerId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Document {
  id         String   @id @default(cuid())
  name       String?
  url        String?
  clientId   String
  client     Client   @relation(fields: [clientId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
